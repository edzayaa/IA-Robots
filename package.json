{
  "type": "module",
  "imports": {
    "#config/*.js": {
      "development": "./src/config/*.ts",
      "default": "./dist/src/config/*.js"
    },
    "#infrastructure/*.js": {
      "development": "./src/infrastructure/*.ts",
      "default": "./dist/src/infrastructure/*.js"
    },
    "#modules/*.js": {
      "development": "./src/modules/*.ts",
      "default": "./dist/src/modules/*.js"
    },
    "#shared/*.js": {
      "development": "./src/shared/*.ts",
      "default": "./dist/src/shared/*.js"
    },
    "#container/*.js": {
      "development": "./src/container/*.ts",
      "default": "./dist/src/container/*.js"
    }
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--conditions=development' tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_OPTIONS='--conditions=development' vitest run",
    "test:watch": "NODE_OPTIONS='--conditions=development' vitest"
  },
  "dependencies": {
    "@fastify/awilix": "^8.2.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.2.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@shopify/storefront-api-client": "^1.0.9",
    "awilix": "^13.0.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "ioredis": "^5.9.3",
    "nodemailer": "^8.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.10",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
