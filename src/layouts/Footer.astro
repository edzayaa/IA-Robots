<style lang="scss">
  footer {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, max-content) 1fr max-content;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    &::before,
    &::after {
      content: "";
      position: absolute;

      border-radius: 50%;
      z-index: -1;
    }
    &::before {
      top: 0;
      left: 50%;
      transform: translate(-50%, -50%);
      width: calc(var(--fs) * 50);
      height: calc(var(--fs) * 50);
      background: radial-gradient(#2c2c2c, #00000000 80%);
    }
    &::after {
      bottom: 0;
      left: 50%;
      transform: translate(-50%, 35%);
      width: calc(var(--fs) * 50);
      height: calc(var(--fs) * 50);
      background: radial-gradient(rgba(0, 85, 255, 0.25), #00000000 80%);
    }
    & > * {
      border-right: 0.1px solid #41414182;
      border-left: 0.1px solid #41414182;
      padding: 0 calc(var(--fs) * 5);
    }
    .links {
      display: grid;
      grid-auto-flow: row;
      grid-auto-rows: max-content;
      gap: calc(var(--fs) * 1.34);
      // border: none;
      padding-top: calc(var(--top-space) * 0.15);
      &:nth-of-type(1),
      &:nth-of-type(2),
      &:nth-of-type(3),
      &:nth-of-type(4) {
        padding-top: calc(var(--top-space) * 0.4);
      }
      &:nth-of-type(1),
      &:nth-of-type(5) {
        border-left: none;
      }
      &:nth-of-type(4),
      &:nth-of-type(8) {
        border-right: none;
      }
      &:nth-of-type(5),
      &:nth-of-type(6),
      &:nth-of-type(7),
      &:nth-of-type(8) {
        padding-bottom: calc(var(--top-space) * 0.1);
      }
      a,
      button {
        color: var(--Gray-Paragraph, #cbcbcb);
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.25);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        text-align: left;
      }
      button {
        color: #fff;
        font-size: calc(var(--fs) * 1.375);
        img {
          display: none;
        }
      }
      a:hover {
        color: #fff;
      }
    }
    .bottom-link {
      color: #fff !important;
      font-family: "Work Sans";
      font-size: calc(var(--fs) * 1.375);
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      text-transform: capitalize;
      padding-top: calc(var(--fs) * 2);
      padding-bottom: calc(var(--fs) * 2);
      border-top: 0.1px solid #41414182;
      border-bottom: 0.1px solid #41414182;
      display: flex;
      align-items: center;
      justify-content: space-between;
      &:nth-of-type(1) {
        border-right: none;
        grid-column: 2 / 3;
      }
      &:nth-of-type(2) {
        grid-column: 3 / 4;
      }
      &:nth-of-type(3) {
        grid-column: 4 / 5;
      }
      &:nth-of-type(4) {
        border-left: none;
        grid-column: 1 / 2;
        grid-row: 3 / 4;
      }
      .icon {
        width: calc(var(--fs) * 1.32469);
        height: calc(var(--fs) * 1.02556);
        transform: translateX(calc(var(--fs) * 1));
        transition: transform 0.15s ease-out;
      }
      &.brand img {
        width: calc(var(--fs) * 16);
        height: auto;
      }
      &:hover {
        .icon {
          transform: translateX(calc(var(--fs) * 1)) rotate(-45deg) scale(1.5);
        }
      }
    }
    .last-elem-footer {
      color: var(--Gray-Paragraph, #cbcbcb);
      font-family: "Work Sans";
      font-size: var(--fs);
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 1.1rem */
      padding-top: calc(var(--fs) * 2);
      padding-bottom: calc(var(--fs) * 2);
      border: none;
    }
  }

  @media (orientation: portrait) and (max-aspect-ratio: 0.624) {
    footer {
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: unset;
      grid-auto-rows: max-content;
      padding-bottom: 7vw;

      &::before {
        transform: translate(-50%, -55%);
      }
      &::after {
        transform: translate(-50%, 65%);
        opacity: 0.75;
      }
      & > * {
        border-right: none !important;
        border-left: none !important;
        border-bottom: 0.1px solid #41414182 !important;
        padding: calc(var(--fs) * 1.75) calc(var(--hor-padding) * 1.5) !important;
        grid-column: 1 / 7;
      }
      .links {
        display: grid;
        grid-auto-flow: row;
        grid-auto-rows: max-content;
        gap: unset;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        overflow: hidden;
        a {
          font-size: calc(var(--fs) * 1.0625);
          padding: calc(var(--fs) * 1.34 / 2) 0;
          display: none;
          &:last-of-type {
            padding-bottom: calc(var(--fs) * 1.34);
          }
        }
        button {
          font-size: calc(var(--fs) * 1.0625);
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: calc(var(--fs) * 1.5) 0;
          img {
            display: block;
          }
        }
      }
      .bottom-link {
        font-size: calc(var(--fs) * 1.0625);
        &:nth-of-type(1) {
          grid-column: 1 / 3;
          border-right: 0.1px solid #41414182 !important;
        }
        &:nth-of-type(2) {
          grid-column: 3 / 5;
          border-right: 0.1px solid #41414182 !important;
        }
        &:nth-of-type(3) {
          grid-column: 5 / 7;
        }
        &:nth-of-type(4) {
          grid-column: 1 / 7 !important;
          grid-row: auto;
          border: none !important;
        }
        .icon {
          width: calc(var(--fs) * 1.32469);
          height: calc(var(--fs) * 1.02556);
          transform: none;
        }
        &.brand img {
          width: calc(var(--fs) * 10);
          height: auto;
        }
        &:hover {
          .icon {
            transform: rotate(-45deg) scale(1.25);
          }
        }
      }
      .last-elem-footer {
        font-size: calc(var(--fs) * 0.75);
        padding-top: calc(var(--fs) * 1) !important;
        padding-bottom: calc(var(--fs) * 1) !important;
        border: none !important;
        &:nth-of-type(1) {
          grid-column: 1 / 4;
        }
        &:nth-of-type(3) {
          grid-column: 4 / 7;
        }
        &:nth-of-type(2) {
          display: none;
        }
      }
    }
  }

  @media (orientation: portrait) and (min-aspect-ratio: 0.625) {
    footer {
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: unset;
      grid-auto-rows: max-content;
      padding-bottom: 5vw;
      &::before,
      &::after {
        content: "";
        position: absolute;

        border-radius: 50%;
        z-index: -1;
      }
      &::before {
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
        width: calc(var(--fs) * 50);
        height: calc(var(--fs) * 50);
        background: radial-gradient(#2c2c2c, #00000000 80%);
      }
      &::after {
        bottom: 0;
        left: 50%;
        transform: translate(-50%, 35%);
        width: calc(var(--fs) * 50);
        height: calc(var(--fs) * 50);
        background: radial-gradient(rgba(0, 85, 255, 0.25), #00000000 80%);
      }
      & > * {
        border-right: 0.1px solid #41414182;
        border-left: 0.1px solid #41414182;
        padding: 0;
      }
      .links {
        display: grid;
        grid-auto-flow: row;
        grid-auto-rows: max-content;
        gap: calc(var(--fs) * 1.34);
        padding: calc(var(--top-space) * 0.25) calc(var(--fs) * 3)
          calc(var(--top-space) * 0.25) calc(var(--fs) * 4) !important;
        grid-column: auto / span 3 !important;
        a,
        button {
          font-size: calc(var(--fs) * 1.125);
        }
        button {
          font-size: calc(var(--fs) * 1.375);
          img {
            display: none;
          }
        }
        &:nth-of-type(1),
        &:nth-of-type(2) {
          padding-top: calc(var(--top-space) * 0.5) !important;
        }
      }

      .bottom-link {
        font-size: calc(var(--fs) * 1.375);
        padding-right: calc(var(--fs) * 2);
        padding-left: calc(var(--fs) * 2);
        &:nth-of-type(1) {
          grid-column: 1 / 3;
          border-right: 0.1px solid #41414182 !important;
          padding-left: calc(var(--fs) * 4);
        }
        &:nth-of-type(2) {
          grid-column: 3 / 5;
          border-right: 0.1px solid #41414182 !important;
        }
        &:nth-of-type(3) {
          grid-column: 5 / 7;
          padding-right: calc(var(--fs) * 4);
        }
        &:nth-of-type(4) {
          grid-column: 1 / 7 !important;
          grid-row: auto;
          border: none !important;
          padding-left: calc(var(--fs) * 4);
        }
        .icon {
          width: calc(var(--fs) * 1.32469);
          height: calc(var(--fs) * 1.02556);
          transform: none;
        }
        &.brand img {
          width: calc(var(--fs) * 15);
          height: auto;
        }
        &:hover {
          .icon {
            transform: rotate(-45deg) scale(1.25);
          }
        }
      }
      .last-elem-footer {
        font-size: calc(var(--fs) * 0.85);
        padding-top: calc(var(--fs) * 2);
        padding-bottom: calc(var(--fs) * 2);
        border: none;
        grid-column: auto / span 2;
        &:nth-of-type(1) {
          padding-left: calc(var(--fs) * 4);
        }
        &:nth-of-type(2) {
          display: none;
        }
        &:nth-of-type(3) {
          justify-self: center;
        }
        &:last-of-type {
          padding-right: calc(var(--fs) * 4);
        }
      }
    }
  }
</style>
