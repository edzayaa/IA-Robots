      <video playsinline muted loop preload="metadata" class="media shot">
        <source src="/videos/a2/2.mp4" type="video/mp4" />
      </video>
    </div>
  </section>

  <section id="tech-section">
    <!-- <Picture src={specs} alt={"Technical specifications"} /> -->

