---
import { Picture } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import hero_home_1 from "../assets/hero_home_1.png";
import hero_home_2 from "../assets/hero_home_2.png";
import hero_home_3 from "../assets/hero_home_3.png";
import hero_home_4 from "../assets/hero_home_4.png";
import autonomy_robot from "../assets/autonomy_robot.png";
import blue_shade from "../assets/blue_shade.png";
import ellipse from "../assets/ellipse.png";
import autonomy_line from "../assets/autonomy_line.png";
import redefining_robot from "../assets/redefining_robot.png";
import shade from "../assets/shade.png";
import texture from "../assets/texture.png";
import target_3 from "../assets/target_3.png";
import future_robotics from "../assets/future_robotics.png";

import { Image } from "astro:assets";
import Preloader from "../components/Preloader.astro";
import ProgressBar from "../components/ProgressBar.astro";
import ButtonPrimary from "@components/ButtonPrimary";
---

<Layout>
  <section id="hero-section">
    <div class="splide" id="hero-splide">
      <div class="splide__arrows">
        <button class="splide__arrow splide__arrow--prev">
          <img src="/icons/arrow_right.svg" alt="Arrow left" />
        </button>
        <button class="splide__arrow splide__arrow--next">
          <img src="/icons/arrow_right.svg" alt="Arrow right" />
        </button>
      </div>
      <div class="splide__track">
        <div class="splide__list">
          <div class="splide__slide">
            <Picture
              class="shot"
              src={hero_home_1}
              alt="Ai Robots"
              formats={["avif", "webp"]}
              fetchpriority="high"
              quality="high"
              loading="eager"
            />
            <div class="line-element">
              <div></div>
              <span> destiny awakening</span>
              <div></div>
            </div>
            <h1 class="title h1">Unitree H2</h1>
            <p>
              The world's most advanced universal humanoid robot. Featuring 31
              DOF, 360NÂ·m joint torque, and a 2070 TOPS compute platform.
            </p>
            <!-- <button class="primary-btn">
              Discover H2
              <div class="icon">
                <img src="/icons/arrow_right.svg" alt="Arrow pointing right" />
              </div>
            </button> -->
            <ButtonPrimary content="Discover H2" />
          </div>
          <div class="splide__slide">
            <Picture
              class="shot"
              src={hero_home_2}
              alt="Ai Robots"
              formats={["avif", "webp"]}
              fetchpriority="high"
              quality="high"
              loading="eager"
            />
            <div class="line-element">
              <div></div>
              <span> Go Beyond the Limits </span>
              <div></div>
            </div>
            <h1 class="title h1">Unitree B2</h1>
            <p>
              The fastest industrial-grade quadruped. IP67-rated, 40kg payload,
              >6m/s speed, built for extreme environments and critical
              inspection missions.
            </p>
            <!-- <button class="primary-btn">
              Explore B2
              <div class="icon">
                <img src="/icons/arrow_right.svg" alt="Arrow pointing right" />
              </div>
            </button> -->
            <ButtonPrimary content="Explore B2" />
          </div>
          <div class="splide__slide">
            <Picture
              class="shot"
              src={hero_home_3}
              alt="Ai Robots"
              formats={["avif", "webp"]}
              fetchpriority="high"
              quality="high"
              loading="eager"
            />
            <div class="line-element">
              <div></div>
              <span> New Creature of Embodied AI </span>
              <div></div>
            </div>
            <h1 class="title h1">Unitree Go2</h1>
            <p>
              The most accessible and intelligent companion robot. Equipped with
              4D LiDAR, ISS 2.0 side-follow, and a powerful AI core.
            </p>
            <!-- <button class="primary-btn">
              Lear About Go2
              <div class="icon">
                <img src="/icons/arrow_right.svg" alt="Arrow pointing right" />
              </div>
            </button> -->
            <ButtonPrimary content="Lear About Go2" />
          </div>
          <div class="splide__slide">
            <Picture
              class="shot"
              src={hero_home_4}
              alt="Ai Robots"
              formats={["avif", "webp"]}
              fetchpriority="high"
              quality="high"
              loading="eager"
            />
            <div class="line-element">
              <div></div>
              <span> Go Further with Higher Efficiency </span>
              <div></div>
            </div>
            <h1 class="title h1">Unitree B2-w</h1>
            <p>
              The ultimate hybrid mobility platform. Combines legs and wheels
              for 15 km/h speed and 25km range with a heavy payload.
            </p>
            <!-- <button class="primary-btn">
              See B2-W
              <div class="icon">
                <img src="/icons/arrow_right.svg" alt="Arrow pointing right" />
              </div>
            </button> -->
            <ButtonPrimary content="See B2-W" />
          </div>
        </div>
      </div>
    </div>
    <div class="carousel-indicator">
      <div class="carousel-steps">
        <button>H2</button>
        <button>B2</button>
        <button>Go2</button>
        <button>B2-w</button>
      </div>
      <div class="carousel-line">
        <span></span>
      </div>
    </div>
    <div class="scroll-down">
      scroll
      <img src="/icons/scroll_down.svg" alt="Scroll down" />
      down
    </div>
    <!-- <Picture src={texture} alt={""} class={"texture"} /> -->
  </section>
  <section id="autonomy-section">
    <div class="h2">
      <h2>advanced autonomy</h2>
    </div>

    <Picture
      class="autonomy-robot"
      src={autonomy_robot}
      alt="Advanced autonomy"
      formats={["avif", "webp"]}
    />
    <Image class={"blue-shade"} src={blue_shade} alt={""} format="webp" />
    <Image class={"ellipse"} src={ellipse} alt={""} format="webp" />

    <div class="autonomy-details">
      <div class="detail">
        <img class="img" src="/icons/gps.svg" alt="" loading="lazy" />
        <p>Autonomous Tracking & Patrol</p>
        <span>
          Automatically identifies inspection tasks and target components,
          executing missions autonomously with self-planned patrols and zero
          blind spots.
        </span>
        <Image class="autonomy-line" src={autonomy_line} alt="" />
      </div>
      <div class="detail">
        <img class="img" src="/icons/waves.svg" alt="" loading="lazy" />
        <p>Unmatched Terrain Adaptability</p>
        <span>
          Effortlessly navigates complex environments, including stairs, slopes,
          and rubble, ensuring 90% all-terrain coverage.
        </span>
        <Image class="autonomy-line" src={autonomy_line} alt="" />
      </div>
      <div class="detail">
        <img class="img" src="/icons/central.png" alt="" loading="lazy" />
        <p>Centralized Remote Control</p>
        <span>
          Real-time data upload to a centralized controlplatform allows for
          remote monitoring, mission adjustment, and intelligent management from
          any location.
        </span>
        <Image class="autonomy-line" src={autonomy_line} alt="" />
      </div>
      <div class="detail">
        <img class="img" src="/icons/eye.png" alt="" loading="lazy" />
        <p>Advanced LiDAR & AI Vision</p>
        <span>
          Utilizes high-definition LiDAR and AI-powered vision for 3D mapping,
          obstacle avoidance, and precise object recognition.
        </span>
        <Image class="autonomy-line" src={autonomy_line} alt="" />
      </div>
    </div>
  </section>
  <section id="redefining-section">
    <div class="head">
      <div class="h2">
        <h2>redefining robotics</h2>
      </div>

      <p>Value for Every Market</p>
    </div>
    <div class="info">
      <h2>Next-Gen Companion</h2>
      <span> Your Embodied AI Partner. </span>
      <p>
        More than a gadget, our consumer robots are intelligent creatures that
        bring cutting-edge Next-Gen Companion technology into your home for
        play, learning, and connection.
      </p>

      <div class="splide">
        <div class="splide__track">
          <div class="splide__list">
            <div class="splide__slide with-border">
              <strong class="shade"></strong>
              <strong class="shade"></strong>
              <img src="/icons/ray.png" alt="" class="icon" />
              <span> Dynamic Interaction </span>
              <p>
                A personality that learns and evolves with your family, powered
                by a sophisticated Large Behavior Model.
              </p>
            </div>
            <div class="splide__slide with-border">
              <strong class="shade"></strong>
              <strong class="shade"></strong>
              <img src="/icons/infinity.svg" alt="" class="icon" />
              <span> Ultimate Mobility </span>
              <p>
                Proprietary motors and control algorithms for seamless
                indoor/outdoor navigation.
              </p>
            </div>
            <div class="splide__slide with-border">
              <strong class="shade"></strong>
              <strong class="shade"></strong>
              <img src="/icons/side.png" alt="" class="icon" />
              <span> Open Platform Fun </span>
              <p>
                An open SDK for coding, education, and unlimited customization
                of tricks and skills.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="bar-wrapper">
        <ProgressBar
          id="redefining-progress-bar"
          className="mobile-horizontal transition"
        />
      </div>
    </div>

    <div class={"redefining-robot"}>
      <Picture
        class="img"
        src={redefining_robot}
        alt="Redefining robotics"
        formats={["avif", "webp"]}
        fetchpriority="high"
        quality={"high"}
      />
      <Image class="ellipse" src={ellipse} alt="" />
    </div>
  </section>
  <section id="target-section">
    <div class="head">
      <h2>
        Targeted <br />
        Inspections
      </h2>
      <span> Lorem Ipsum door asit met </span>
      <div class="progress">
        <ProgressBar id="target-progress-bar" />
        <strong> </strong>
        <div class="steps-container">
          <div class="steps">
            <span>Eliminating Blind Spots</span>
            <span>Close-Up Inspection </span>
            <span>Precise Temperature Measurement</span>
          </div>
        </div>
      </div>
    </div>
    <div class="splide">
      <div class="splide__track">
        <div class="list splide__list">
          <div class="item splide__slide">
            <p>
              Eliminating Blind Spots and <br class="br-mobile" /> Ensuring Full Coverage
            </p>
            <span>
              Traditional inspection methods often leave critical areas
              unchecked. Our quadruped robots ensure full-area, high-frequency
              inspections with zero blind spots by dramatically boosting
              inspection coverage density and data continuity. The intelligent
              patrol system captures dynamic hazards in complex settings with
              pinpoint accuracy, providing a complete picture of asset health.
            </span>
            <video
              class="media"
              preload="none"
              muted
              loop
              playsinline
              width=""
              height=""
            >
              <source src="/videos/target_1.mp4" type="video/mp4" />
            </video>
          </div>
          <div class="item splide__slide">
            <p>Close-Up Inspection of Switch Meters</p>
            <span>
              Achieving accurate, close-up readings of analog switch meters is a
              common challenge. Our robots utilize No-Model Meter Recognition,
              an enhanced capability that automatically pinpoints meter
              locations, performs semantic segmentation of measurement ranges,
              and corrects distortion. This allows for the automatic reading of
              values without the need for manual calibration or pre-trained
              models.
            </span>
            <video
              class="media"
              preload="none"
              muted
              loop
              playsinline
              width=""
              height=""
            >
              <source src="/videos/target_2.mp4" type="video/mp4" />
            </video>
          </div>
          <div class="item splide__slide">
            <p>
              Precise Temperature Measurement <br class="br-mobile" /> of Dry Reactors
            </p>
            <span>
              Monitoring the thermal integrity of critical equipment like dry
              reactors is essential for preventing catastrophic failure. The
              integrated Infrared Thermography system, combined with AI vision,
              delivers 24/7 real-time scanning for temperature anomalies. This
              high-precision thermal data allows for proactive maintenance and
              immediate identification of overheating components, safeguarding
              critical infrastructure
            </span>
            <Picture
              class={"media"}
              src={target_3}
              alt="Precise Temperature Measurement"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="bar-wrapper">
      <ProgressBar
        id="target-progress-bar-mob"
        className="mobile-horizontal transition"
      />
    </div>
  </section>
  <section id="future-section">
    <Picture
      class="bck"
      src={future_robotics}
      alt={"Future Robotics"}
      fetchpriority={"high"}
      quality="high"
      formats={["avif", "webp"]}
    />
    <h2>Step into the Future <br /> of Robotics.</h2>
    <p>Embrace the power of Embodied AI today.</p>
    <!-- <button class="primary-btn">
      Order Your Go2 Now
      <div class="icon">
        <img src="/icons/arrow_right.svg" alt="Arrow pointing right" />
      </div>
    </button> -->
    <ButtonPrimary content="Order Your Go2 Now" />
  </section>
</Layout>

<style lang="scss" is:global>
  // section {
  //   background-color: gray;
  //   background-color: black;
  // }
  .bar-wrapper {
    display: none;
    visibility: hidden;
    opacity: 0;
  }
  #hero-section {
    height: 100svh;
    opacity: 0;
    #hero-splide {
      height: 100%;
      .splide__arrows {
        .splide__arrow {
          width: calc(var(--fs) * 4.4375);
          height: calc(var(--fs) * 4.4375);
          border-radius: var(--fs);
          background: rgba(173, 173, 173, 0.25);
          outline: none;
          img {
            width: 55%;
            height: auto;
          }
          &:first-of-type {
            left: calc(var(--hor-padding) * 2);
            img {
              transform: scaleX(-1);
            }
          }
          &:last-of-type {
            right: calc(var(--hor-padding) * 2);
          }
        }
      }
      .splide__track,
      .splide__list {
        height: 100%;
      }
      .splide__slide {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        height: 100%;
        position: relative;
        width: 100%;
        padding-bottom: 15vh;
        & > * {
          z-index: 1;
        }
        .shot {
          width: 100%;
          height: 100%;
          position: absolute;
          top: 0;
          left: 0;
          object-fit: cover;
          z-index: 0;
        }
       

        .title {
          color: var(--White, #fff);
          text-align: center;
          font-family: "Work Sans";
          font-style: normal;
          font-weight: 500;
          line-height: 1; /* 100% */
          margin-top: calc(var(--fs) * 1.5);
        }
        p {
          color: #cbcbcb;
          text-align: center;
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.25);
          font-style: normal;
          font-weight: 400;
          line-height: 1.25;
          margin-top: calc(var(--fs) * 2);
          width: calc(var(--fs) * 45.9);
        }
        .primary-btn {
          margin-top: calc(var(--fs) * 2.5);
        }
      }
    }
    .carousel-indicator {
      position: absolute;
      bottom: calc(var(--fs) * 2);
      right: calc(var(--hor-padding) * 2);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      .carousel-steps {
        display: grid;
        grid-auto-flow: column;
        grid-auto-columns: max-content;
        gap: calc(var(--fs) * 2);
        margin-bottom: calc(var(--fs) * 1);
        button {
          color: #fff;
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.125);
          font-style: normal;
          font-weight: 400;
          line-height: normal;
        }
      }
      .carousel-line {
        min-width: calc(var(--fs) * 5);
        width: 100%;
        height: calc(var(--fs) * 0.125);
        background: #b4b4b4;
        border-radius: calc(var(--fs) * 0.0625);
        overflow: hidden;
        position: relative;
        span {
          position: absolute;
          top: 0%;
          left: -100%;
          width: 100%;
          height: 100%;
          background: rgba(0, 85, 255, 1);
          border-radius: calc(var(--fs) * 0.0625);
          z-index: 1;
          transition: transform 0.5s ease-in-out;
        }
      }
    }
    .scroll-down {
      color: #a7a7a7;
      font-family: "Work Sans", sans-serif;
      font-size: calc(var(--fs) * 1.25);
      font-style: normal;
      font-weight: 600;
      line-height: normal;
      text-transform: uppercase;
      position: absolute;
      bottom: 5vh;

      left: 50%;
      transform: translate(-50%, 0%);
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: max-content;
      gap: calc(var(--fs));

      img {
        width: calc(var(--fs) * 1.31113);
        height: calc(var(--fs) * 2.18731);
      }
    }
  }

  #autonomy-section {
    padding-top: calc(var(--top-space) * 0.5);
    min-height: 55vw;
    .ellipse {
      position: absolute;
      width: auto;
      height: 37vw;
      bottom: 0;
      left: 47.5%;
      transform: translate(-50%, 0%);
      z-index: -1;
      opacity: 0.5;
    }
    .blue-shade {
      position: absolute;
      z-index: -1;
      width: 70vw;
      height: auto;
      bottom: 50%;
      left: 50%;
      transform: translate(-50%, 50%);
    }
    & > * {
      z-index: 1;
    }
    .autonomy-robot {
      object-fit: cover;
      width: calc(var(--fs) * 46.75 * 0.95);
      height: calc(var(--fs) * 39 * 0.95);
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translate(-50%, 0%);
      z-index: 0;
    }
    .h2 {
      overflow: hidden;
      h2 {
        color: #fff;
        text-align: center;
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 5);
        font-style: normal;
        font-weight: 500;
        line-height: 1.25; /* 100% */
        text-transform: capitalize;
      }
    }

    .autonomy-details {
      display: grid;
      grid-template-columns: repeat(2, max-content);
      grid-auto-rows: 1fr;
      justify-content: space-between;
      row-gap: calc(var(--fs) * 7.5);
      padding: 0 calc(var(--hor-padding) * 0.75);
      margin-top: calc(var(--fs) * 6.5);
      .detail {
        display: grid;
        grid-template-columns: max-content 1fr;
        grid-auto-rows: max-content;
        column-gap: calc(var(--fs) * 1.35);
        row-gap: calc(var(--fs) * 0.5);
        width: calc(var(--fs) * 36.5);
        position: relative;
        .img {
          width: calc(var(--fs) * 5);
          height: calc(var(--fs) * 5);
          grid-row: 1 / 3;
        }
        .autonomy-line {
          position: absolute;
          bottom: 0;
          transform: translate(0%, calc(100% + calc(var(--fs) * 2)));
        }
        &:nth-of-type(odd) {
          .autonomy-line {
            transform: translate(0%, calc(100% + calc(var(--fs) * 2)))
              scaleX(-1);
          }
        }
        p {
          color: #fff;
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.875);
          font-style: normal;
          font-weight: 500;
          line-height: normal;
          grid-column: 2 / 3;
        }
        span {
          color: #cbcbcb;
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.25);
          font-style: normal;
          font-weight: 400;
          line-height: normal;
          grid-column: 2 / 3;
        }
        &:nth-of-type(1) {
          span {
            width: 85%;
          }
        }
        &:nth-of-type(2) {
          span {
            width: 100%;
          }
        }
        &:nth-of-type(3) {
          span {
            width: 100%;
          }
        }
        &:nth-of-type(4) {
          span {
            width: 85%;
          }
        }
      }
    }
  }

  #redefining-section {
    display: grid;
    grid-template-columns: max-content calc(var(--fs) * 38);
    justify-content: space-between;
    padding: 0 calc(var(--hor-padding) * 1.5);
    padding-top: var(--top-space);
    row-gap: calc(var(--fs) * 7.5);
    .head {
      grid-column: 1 / 2;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      .h2 {
        overflow: hidden;
        h2 {
          color: var(--White, #fff);
          text-align: center;
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 5);
          font-style: normal;
          font-weight: 500;
          line-height: 1.25; /* 100% */
          text-transform: capitalize;
        }
      }

      p {
        color: var(--Gray-Paragraph, #cbcbcb);
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.875);
        font-style: normal;
        font-weight: 500;
        line-height: normal;
        margin-top: calc(var(--fs) * 0.5);
      }
    }
    .info {
      grid-column: 2 / 3;
      grid-row: 1 / 3;

      h2 {
        color: #fff;
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 2.5);
        font-style: normal;
        font-weight: 500;
        line-height: normal;
      }
      span {
        color: var(--Gray-Paragraph, #cbcbcb);
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.875);
        font-style: normal;
        font-weight: 500;
        line-height: normal;
        margin-top: calc(var(--fs) * 1.25);
        display: block;
      }
      p {
        color: var(--Gray-Paragraph, #cbcbcb);
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.25);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        margin-top: calc(var(--fs) * 1);
      }
      .splide {
        visibility: visible !important;
        margin-top: calc(var(--fs) * 3);
      }
      .splide__track {
        overflow: visible;
      }
      .splide__slide {
        display: grid;
        grid-template-columns: max-content 1fr;
        column-gap: calc(var(--fs) * 1.44);
        row-gap: calc(var(--fs) * 0.625);
        width: 100%;
        min-height: calc(var(--fs) * 11.125);
        border-radius: calc(var(--fs) * 1.25);

        padding: calc(var(--fs) * 2.56) calc(var(--fs) * 3);

        .shade {
          grid-column: unset !important;
          grid-row: unset !important;

          &:first-of-type {
            bottom: 0;
            left: 0;
            transform: translate(-50%, 60%);
          }
          &:last-of-type {
            top: 0;
            right: 0;
            transform: translate(50%, -60%);
          }
        }

        .icon {
          width: calc(var(--fs) * 5);
          height: calc(var(--fs) * 5);
          grid-column: 1 / 2;
          grid-row: 1 / 3;
        }
        span,
        p {
          margin-top: 0;
        }
        span,
        p {
          grid-column: 2 / 3;
        }
      }
    }
    .redefining-robot {
      width: calc(var(--fs) * 60.8125 * 1.15);
      height: calc(var(--fs) * 40.99813 * 1.15);
      display: flex;
      align-items: center;
      justify-content: center;
