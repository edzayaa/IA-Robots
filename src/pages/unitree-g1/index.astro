import go2_w_3 from "@assets/go2_w/3.png";
import go2_w_4 from "@assets/go2_w/4.png";
import specs from "@assets/go2_w/specs.png";
import "@styles/cards_section.scss";
import ButtonPrimary from "@components/ButtonPrimary";
import ButtonSecondary from "@components/ButtonSecondary";
import robust from "@assets/h1_h2/robust.png";
import "@styles/book_section.scss";
import book_bck from "@assets/book_bck.png";
import "@styles/shot_section.scss";
import "@styles/tech_section.scss";
import "@styles/new_section.scss";
import { pages } from "@/scripts/pages";
import SequenceSection from "@components/SequenceSection.astro";
import { getImage } from "astro:assets";

const images = import.meta.glob("@assets/sequences/raw_g1/*.jpg");
const imagesValues = Object.values(images);

const resImages = await Promise.all(
  imagesValues.map(async (img) => {
    const imageModule = (await img()) as any; // Resolve the import
    return await getImage({
      src: imageModule.default,
      format: "webp",
      quality: "high",
    });
  }),
);

console.log(resImages[0]);

const robotSpecsTable = [
  ["Characteristic", "G1 (Base)", "G1 EDU"],
  ["Height / Weight", "130cm / ~35kg", "130cm / ~35kg+"],
  ["Total DOF", "23", "23 to 43 (Configurable)"],
  ["Max Knee Joint Torque", "90 N.m", "120 N.m"],
  ["Arm Max Load", "2 kg", "3 kg"],
  ["Dexterous Hand", "-", "Optional Dex3-1 (7 DOF)"],
  ["Computing", "8-Core CPU", "NVIDIA Jetson Orin (Optional)"],
  ["Endurance", "2 hours (9000mAh)", "2 hours (9000mAh)"],
  ["Sensing", "Depth Camera + 3D LiDAR", "Depth Camera + 3D LiDAR"],
];
