<Layout>
  <section id="hero-section">
    <Picture
      class="hero-shot"
      src={heroImg}
      alt="Unitree Go2-W "
      loading="eager"
      fetchpriority={"high"}
      quality={"high"}
      formats={["avif", "webp"]}
    />
    <div class="content">
      <h1 class="h1">Unitree Go2-W</h1>
      <p class="subtitle-3">Transformative Newborn</p>
    </div>
    <div class="sub-content">
      <h1 class="h1 text-center intro-anim">
        The Agile and Intelligent <br class="br-tablet br-mobile" /> Platform <br
          class="br-desktop"
        /> for Humanoid <br class="br-tablet br-mobile" /> AI Development
      </h1>
      <span class="paragraph-1 intro-anim">
        The Unitree G1 is a compact, highly flexible, and cost-effective
        humanoid agent, driven by Imitation and Reinforcement Learning, ready to
        be the next generation of AI avatars.
      </span>

      <ButtonPrimary
        content="Buy now"
        type="a"
        href={pages.product.path}
        className="intro-anim"
      />
    </div>
  </section>
  <section id="new-section" class="sequence-section">
