<style lang="scss" is:global>
  #hero-section {
    padding-top: calc(var(--top-space) * 0.5);
    padding-bottom: calc(var(--top-space) * 0.25);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100vh;
    &:before {
      content: "";
      position: absolute;
      bottom: calc(var(--fs) * -1);
      left: 0;
      width: 100%;
      height: 30%;
      background: linear-gradient(#00000000, #000);
      opacity: 1;
      pointer-events: none;
      z-index: 1;
    }
    & > * {
      z-index: 1;
    }
    .hero-video {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: calc(var(--fs) * 26.92969);
      height: calc(var(--fs) * 47.875);
      z-index: 0;
      border-radius: calc(var(--fs) * 5.375);
      overflow: hidden;
      &::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(#00000000, #000);
      }
      video {
        object-fit: cover;
        object-position: bottom center;
        width: 100%;
        height: 100%;
      }
    }
    .content {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      visibility: hidden;
      p {
        margin-top: calc(var(--fs) * 1.25);
      }
    }
    .sub-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      .paragraph-1 {
        margin-top: calc(var(--fs) * 1);
        width: calc(var(--fs) * 34.1875);
      }
      .primary-btn {
        margin-top: calc(var(--fs) * 3.12);
      }
    }
  }

  #new-section {
    padding-top: calc(var(--top-space) * 0.25);
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    grid-template-columns: 100%;
    gap: min(calc(var(--fs) * 7.5), 6.5vh);
    place-items: center;
    place-content: center;
    .content {
      display: grid;
      grid-auto-flow: row;
      gap: calc(var(--fs) * 1.25);
      place-items: center;
      place-content: center;

      p {
        color: var(--Gray-Paragraph, #cbcbcb);
        text-align: center;
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.875);
        font-style: normal;
        font-weight: 500;
        line-height: normal;
      }
    }
    .shot {
      position: relative;
      picture {
        width: calc(var(--fs) * 40);
        height: calc(var(--fs) * 50);
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
      .detail {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        p {
          color: var(--White, #fff);
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 2.375);
          font-style: normal;
          font-weight: 500;
          line-height: normal;
        }
        span {
          color: var(--MAIN-BLUE, #6289ff);
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.15388);
          font-style: normal;
          font-weight: 500;
          line-height: normal;
          letter-spacing: calc(var(--fs) * -0.04613);
          margin-top: calc(var(--fs) * 0.62);
        }
        img {
          width: calc(var(--fs) * 19.5);
          height: calc(var(--fs) * 4.37813);
          margin-top: calc(var(--fs) * 1.34);
        }
        &:nth-of-type(odd) {
          img {
            transform: translateX(25%);
          }
        }
        &:nth-of-type(even) {
          img {
            transform: scaleX(-1) translateX(35%);
          }
        }
        &:nth-of-type(1) {
          top: 0;
          left: 0;
          transform: translate(calc(var(--fs) * 0 - 100%), calc(var(--fs) * 5));
        }
        &:nth-of-type(3) {
          bottom: 0;
          left: 0;
          transform: translate(
            calc(var(--fs) * 0 - 100%),
            calc(var(--fs) * -4)
          );
        }
        &:nth-of-type(2) {
          top: 0;
          right: 0;
          transform: translate(calc(var(--fs) * 0 + 100%), calc(var(--fs) * 5));
        }

        &:nth-of-type(4) {
          bottom: 0;
          right: 0;
          transform: translate(
            calc(var(--fs) * 0 + 100%),
            calc(var(--fs) * -4)
          );
        }
      }
    }

    .blue-shade {
      position: absolute;
      z-index: -1;
      width: 70vw;
      height: auto;
      bottom: 50%;
      left: 50%;
      transform: translate(-50%, 50%);
    }
  }

  #points-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: calc(var(--top-space) * 0.5) calc(var(--hor-padding) * 4) 0;
    min-height: unset;
    video {
      width: calc(var(--fs) * 25.3125);
      min-width: calc(var(--fs) * 25.3125);
      height: calc(var(--fs) * 45);
      object-fit: cover;
      overflow: hidden;
      border-radius: calc(var(--fs) * 3.75);
    }
    .points {
      display: grid;
      grid-auto-flow: row;
      grid-auto-rows: max-content;
      gap: calc(var(--fs) * 2);
      width: calc(var(--fs) * 60);

      .point {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: calc(var(--fs) * 0.5);
        & > * {
          text-align: left;
        }
      }
    }
  }

  #details-section {
    min-height: unset;
    padding: calc(var(--top-space) * 0.75) 0 0;
    h2 {
      margin-bottom: calc(var(--fs) * 6.44);
    }
    .wrapper {
      height: calc(var(--fs) * 39.625);
      width: 100%;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      &::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: calc(var(--fs) * 32.25 * 1.25);
        height: calc(var(--fs) * 52.1875 * 1.25);
        border-radius: calc(var(--fs) * 52);
        z-index: -1;
        opacity: 0.9;
        background: radial-gradient(
          50% 50% at 50% 50%,
          rgba(0, 85, 255, 0.5) 0%,
          rgba(0, 120, 255, 0) 100%
        );
      }
      .media {
        border-radius: calc(var(--fs) * 1.875);
        object-fit: cover;
        overflow: hidden;
        width: calc(var(--fs) * 22.25);
        height: 100%;
      }

      .autonomy-details {
        display: grid;
        grid-template-columns: repeat(2, max-content);
        grid-auto-rows: 1fr;
        justify-content: space-between;
        row-gap: calc(var(--fs) * 7.5);
        column-gap: calc(var(--fs) * 22.25 * 1.5);
        padding: 0;
        position: absolute;
        .detail {
          display: grid;
          grid-template-columns: repeat(2, max-content);
          grid-auto-rows: max-content;
          column-gap: calc(var(--fs) * 1.35);
          row-gap: calc(var(--fs) * 0.25);
          position: relative;
          &:nth-of-type(odd) {
            p,
            span {
              grid-column: 1 / 2;
              text-align: right;
            }
            .img {
              grid-column: 2 /3;
            }
          }
          .img {
            width: calc(var(--fs) * 4.3);
            height: calc(var(--fs) * 4.3);
            grid-row: 1 / 3;
          }
          .autonomy-line {
            position: absolute;
            bottom: 0;
            transform: translate(0%, calc(100% + calc(var(--fs) * 2)));
          }
          &:nth-of-type(odd) {
            .autonomy-line {
              transform: translate(0%, calc(100% + calc(var(--fs) * 2)))
                scaleX(-1);
            }
          }
          p {
            color: #fff;
            font-family: "Work Sans";
            font-size: calc(var(--fs) * 1.875);
            font-style: normal;
            font-weight: 500;
            line-height: normal;
            grid-column: 2 / 3;
          }
          span {
            color: #cbcbcb;
            font-family: "Work Sans";
            font-size: calc(var(--fs) * 1.875);
            font-style: normal;
            font-weight: 400;
            line-height: normal;
            grid-column: 2 / 3;
          }
          p,
          span {
            width: calc(var(--fs) * 27.5) !important;
          }
          &:nth-of-type(1) {
            span {
              width: 85%;
            }
          }
          &:nth-of-type(2) {
            span {
              width: 100%;
            }
          }
          &:nth-of-type(3) {
            span {
              width: 100%;
            }
          }
          &:nth-of-type(4) {
            span {
              width: 85%;
            }
          }
        }
      }
    }
  }

  @media (orientation: landscape) {
    .book-section {
      .book-wrapper {
        .second {
          .book-shot {
            object-fit: contain;
            transform: translate(-50%, 20%) scale(1.35);
