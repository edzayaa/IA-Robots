import heroImg from "@assets/h2/hero_home_1.png";
import { Picture } from "astro:assets";
import modelShot from "@assets/holographic/model.png";
import dev from "@assets/r1/dev.png";
import autonomy_line from "@assets/autonomy_line.png";

import { Image } from "astro:assets";
import blue_shade from "@assets/blue_shade.png";
import go2_w_1 from "@assets/go2_w/1.png";
import go2_w_2 from "@assets/go2_w/2.png";
import go2_w_3 from "@assets/go2_w/3.png";
import go2_w_4 from "@assets/go2_w/4.png";
import specs from "@assets/go2_w/specs.png";
import "@styles/cards_section.scss";
import ButtonPrimary from "@components/ButtonPrimary";
import ButtonSecondary from "@components/ButtonSecondary";
import robust from "@assets/h1_h2/robust.png";
import "@styles/book_section.scss";
import book_bck from "@assets/book_bck.png";
import "@styles/shot_section.scss";
import "@styles/tech_section.scss";
import { pages } from "@/scripts/pages";

const robotSpecsTable = [
  ["Characteristic", "Value", "Notes"],
  ["Model", "YC-T86X75", "1230mm / ~29kg"],
  ["Screen Size", "75-inch", "26"],
  ["Resolution", "3840 x 2160 (4K)", "About 2kg"],
  ["Touch Technology", "20-point Infrared Touch", "1 hour"],
  ["Standard Configuration", "RK3588, 8GB RAM, 128GB Storage", "Binocular camera"],
  ["Voice Module", "Directional 8-mic", "Dedicated voice module with noise reduction."],
  ["Audio", "Built-in Stereo Speakers", "-"],
  ["Form Factor", "Floor-standing Cabinet", "Patented appearance design."]
];
---

<Layout>
  <section id="hero-section">
    <div class="hero-video">
      <video
        playsinline
        muted
        loop
        preload="metadata"
        width=""
        height=""
        class="media"
      >
        <source src="/videos/holographic/hero.mp4" type="video/mp4" />
      </video>
    </div>

    <div class="content">
      <h1 class="h1">Unitree Go2-W</h1>
      <p class="subtitle-3">Transformative Newborn</p>
    </div>
    <div class="sub-content">
      <h1 class="h1 text-center intro-anim">
        Bring Your Brand to <br class="br-mobile br-tablet" /> Life with a Life-Size
        <br /> Digital Human
      </h1>
      <span class="paragraph-1 intro-anim">
        The YC-T86X75 is a state-of-the-art, 75-inch Ultra HD transparent LCD
        cabinet that delivers an immersive, interactive experience with a
        virtual AI Digital Human.
      </span>

      <!-- <ButtonPrimary content="Buy now" type="a" href={pages.product.path} /> -->
    </div>
  </section>
  <section id="new-section">
