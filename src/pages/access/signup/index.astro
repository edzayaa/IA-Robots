---
import Layout from "@layouts/Layout.astro";
import img from "@assets/access/access_signin.jpg";
import "@styles/access.scss";
import { Picture } from "astro:assets";
import ButtonPrimary from "@components/ButtonPrimary";
import { pages } from "@scripts/pages";
---

<Layout renderFooter={false} headerClasses="no-desktop-header">
  <section class="access-section" transition:animate="none">
    <Picture
      src={img}
      alt="Access section"
      fetchpriority={"high"}
      quality={"max"}
      loading={"eager"}
    />
    <div class="form-wrapper">
      <form action="">
        <span class="paragraph-1 text-center intro-anim"
          >Sign Up to AI ROBOTICS</span
        >
        <h1 class="subtitle-1 color-white intro-anim">Create your Account</h1>
        <div class="field-wrapper intro-anim">
          <label class="paragraph-1 text-start color-white" for="email"
            >Email</label
          >
          <div class="field">
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Type your email"
            />
          </div>
        </div>

        <div class="field-wrapper last intro-anim">
          <label class="paragraph-1 text-start color-white" for="password"
            >Password</label
          >
          <div class="field">
            <input
              type="password"
              id="password"
              name="password"
              placeholder="********"
            />
          </div>
        </div>
        <ButtonPrimary
          content="create your account"
          className="full-width icon-right intro-anim"
        />
        <div class="checks intro-anim">
          <div class="check">
            <input type="checkbox" id="first" name="terms" />
            <label class="paragraph-2" for="first"
              >I have read and approve <span class="color-blue"
                >the membership agreement</span
              ></label
            >
          </div>
          <div class="check">
            <input type="checkbox" id="second" name="terms" />
            <label class="paragraph-2" for="second"
              >I accept the processing of my personal data in accordance with
              the <span class="color-blue"> Explicit Consent Text </span>
            </label>
          </div>
          <div class="check">
            <input type="checkbox" id="third" name="terms" />
            <label class="paragraph-2" for="third">
              I want to receive commercial electronic messages and sms to be
              informed about product promotions and campaigns.</label
            >
          </div>
        </div>
      </form>
      <div class="alternative">
        <div class="or intro-anim">
          <strong></strong>
          <span class="paragraph-2"> or </span>
          <strong></strong>
        </div>
        <div class="options intro-anim">
          <button class="btn paragraph-2">
            <img src="/icons/google.svg" alt="" loading="lazy" />
            Continue with Google
          </button>
          <button class="btn paragraph-2">
            <img src="/icons/apple.svg" alt="" loading="lazy" />
            Continue with Apple
          </button>
        </div>
      </div>
      <span class="reset paragraph-1 intro-anim">
        Do you have an account?
        <a href={pages.signin.path}>Log In</a>
      </span>
    </div>
  </section>
</Layout>
