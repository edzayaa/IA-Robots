      justify-content: flex-end;
      height: 100svh;
      min-height: unset;
      .hero-shot {
        object-position: bottom center;
      }
      & > * {
        z-index: 2;
      }
      .content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;

        p {
          margin-top: calc(var(--fs) * 0.75);
        }
      }
      .sub-content {
        width: 100%;
        .subtitle-2 {
          margin-top: calc(var(--fs) * 1.19);
        }
        .paragraph-1 {
          padding: 0 calc(var(--hor-padding) * 2);
          margin-top: calc(var(--fs) * 0.75);
        }
        .primary-btn {
          margin-top: calc(var(--fs) * 2.25);
        }
      }
    }

    #new-section {
      padding: calc(var(--top-space) * 2) 0;
      gap: min(calc(var(--fs) * 7.5), 6.5vh);
      min-height: unset;
      .content {
        gap: calc(var(--fs) * 0.625);

        p {
          font-size: calc(var(--fs) * 1.125);
        }
      }
      .shot {
        picture {
          width: calc(var(--fs) * 39.3125 * 0.6);
          height: calc(var(--fs) * 29 * 0.6);
          img {
            object-position: 0% 85%;
          }
        }
        .detail {
          display: none;
          opacity: 0;
          visibility: hidden;
        }
      }

      .blue-shade {
        width: 150vw;
        opacity: 0.75;
