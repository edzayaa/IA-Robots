  #hero-section {
    padding-top: calc(var(--top-space) * 0.5);
    padding-bottom: calc(var(--top-space) * 0.25);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100vh;
    &:before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(#00000000, #000);
      opacity: 0.5;
      pointer-events: none;
      z-index: 0;
    }
    & > * {
      z-index: 1;
    }
    picture {
      z-index: -1;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .hero-shot {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: bottom center;
    }
    .content {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      visibility: hidden;
      p {
        margin-top: calc(var(--fs) * 1.25);
      }
    }
    .sub-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      .paragraph-1 {
        margin-top: calc(var(--fs) * 1);
        width: calc(var(--fs) * 34.1875);
      }
      .primary-btn {
        margin-top: calc(var(--fs) * 3.12);
      }
    }
  }

  #new-section {
    padding-top: calc(var(--top-space) * 0.25);
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    grid-template-columns: 100%;
    gap: min(calc(var(--fs) * 7.5), 6.5vh);
    place-items: center;
    place-content: center;
    .content {
      display: grid;
      grid-auto-flow: row;
      gap: calc(var(--fs) * 1.25);
      place-items: center;
      place-content: center;

      p {
        color: var(--Gray-Paragraph, #cbcbcb);
        text-align: center;
        font-family: "Work Sans";
        font-size: calc(var(--fs) * 1.875);
        font-style: normal;
        font-weight: 500;
        line-height: normal;
      }
    }
    .shot {
      position: relative;
      picture {
        width: calc(var(--fs) * 45);
        height: calc(var(--fs) * 45);
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
      .detail {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        p {
          color: var(--White, #fff);
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 2.375);
          font-style: normal;
          font-weight: 500;
          line-height: normal;
        }
        span {
          color: var(--MAIN-BLUE, #6289ff);
          font-family: "Work Sans";
          font-size: calc(var(--fs) * 1.15388);
          font-style: normal;
          font-weight: 500;
          line-height: normal;
          letter-spacing: calc(var(--fs) * -0.04613);
          margin-top: calc(var(--fs) * 0.62);
        }
        img {
          width: calc(var(--fs) * 19.5);
          height: calc(var(--fs) * 4.37813);
          margin-top: calc(var(--fs) * 1.34);
        }
        &:nth-of-type(odd) {
          img {
            transform: translateX(25%);
          }
        }
        &:nth-of-type(even) {
          img {
            transform: scaleX(-1) translateX(35%);
          }
        }
        &:nth-of-type(1) {
          top: 0;
          left: 0;
          transform: translate(calc(var(--fs) * 0 - 100%), calc(var(--fs) * 5));
        }
        &:nth-of-type(3) {
          bottom: 0;
          left: 0;
          transform: translate(
            calc(var(--fs) * 5 - 100%),
            calc(var(--fs) * -4)
          );
        }
        &:nth-of-type(2) {
          top: 0;
          right: 0;
          transform: translate(calc(var(--fs) * 0 + 100%), calc(var(--fs) * 2));
        }

        &:nth-of-type(4) {
          bottom: 0;
          right: 0;
          transform: translate(
            calc(var(--fs) * 0 + 100%),
            calc(var(--fs) * -4)
          );
        }
      }
    }

    .blue-shade {
      position: absolute;
      z-index: -1;
      width: 70vw;
      height: auto;
      bottom: 50%;
      left: 50%;
      transform: translate(-50%, 50%);
    }
  }

